<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <form method="POST" action="/confirm" enctype="multipart/form-data">
            <div class="modal-content">
                <div class="modal-header bg-dark">
                    <h3>Add task</h3>
                </div>
                
                <div class="modal-body bg-dark">
                
                    <div class="form-group">
                        <h5>Title</h5>
                        <input type="text" class="form-control" name="title" placeholder="Name a taks..." required><br>

                        <h5>Difficulty</h5>
                        <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="importance" id="flexRadioDefault1" value="1" checked>
                        <label class="form-check-label" for="flexRadioDefault1">Easy</label><br>
                        </div>
            
                        <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="importance" id="flexRadioDefault2" value="2">
                        <label class="form-check-label" for="flexRadioDefault2">moderate</label>
                        </div>
            
                        <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="importance" id="flexRadioDefault3" value="3">
                        <label class="form-check-label" for="flexRadioDefault2">Hard</label>
                        </div><br><br>
                        
                        <h5>Description</h5>
                        <textarea class="form-control" name = "description" placeholder="Describe the task so you don't forget..." id="floatingTextarea" required></textarea>
                    </div>
                </div>
                
                <div class="modal-footer bg-dark">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-primary" value="Include task">
                </div>
            </div>
        </form>
    </div>
</div>