<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('head'); %>
        <link rel="stylesheet" href="style/list.css">
</head>

<body>
    <%- include('navbar'); %>

    <div class="container">
        <div class="card" id="search-card">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <form method="GET" action="/search" enctype="multipart/form-data">
                            <div class="input-group" id="search-input">
                                <input type="text" class="form-control" placeholder="Search for some task...">
                                <div class="input-group-text" id="btnGroupAddon">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                    </svg>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col">
                        <button type="button" class="btn btn-dark btn-lg" id="button-task" data-bs-toggle="modal" data-bs-target="#exampleModal">add task</button>
                        <%- include('modal'); %>
                    </div>
                </div>
            </div>
        </div>

            <% task.forEach(function(tarefa) { %>
                <div class="card mt-2">
                    <% if(tarefa.dificuldade == 3){ %>
                        <div class="card-header bg-danger">
                            High importance
                        </div>
                    <% } else if(tarefa.dificuldade == 2) {%>
                        <div class="card-header bg-warning">
                            Moderate importance
                        </div>
                    <% } else if(tarefa.dificuldade == 1) {%>
                        <div class="card-header bg-info">
                            Easy to do
                        </div>
                    <% } %>
                    <div class="card-body">
                        <h3 class="card-title"><%= tarefa.titulo %></h3>
                        <p class="card-text text-truncate"><%= tarefa.descricao %></p>
                    </div>
                    <div class="card-footer">
                        <ul class="nav nav-pills card-header-pills">
                          <li class="nav-item">
                            <a class="nav-link" href="#">Success</a>
                          </li>
                          <li class="nav-item">
                            <a class="nav-link" href="#">Failure</a>
                          </li>
                        </ul>
                    </div>
                </div>
            <% }) %>
    </div>
</body>
</html>